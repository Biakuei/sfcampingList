<aura:component >
    <aura:attribute name="items" type="Camping_Item__c[]" />    
    <aura:attribute name="newItem" type="Camping_Item__c"
    		default="{ 'sobjectType': 'Camping_Item__c',                       
                       'Name': '',
                	   'Quantity__c': 0,
                	   'Price__c': 0,
                	   'Packed__c': false }" />
    
    <!-- NEW ITEM FORM -->
    <lightning:layout>
    	<lightning:layoutItem padding="around-small" size="6">
        	
                    <!-- CREATE NEW ITEM FORM -->
                    <form class="slds-form_stacked">
                        <lightning:input aura:id="itemform" label="Camping Name"
                                     name="expensename"
                                     value="{!v.newItem.Name}"
                                     required="true"/>
                    <lightning:input type="number" aura:id="itemform" label="Quantity"
                                     name="expenseamount"
                                     min="1"
                                     value="{!v.newItem.Quantity__c}"
                                     messageWhenRangeUnderflow="Enter minimum 1 Quantity"/>
                    <lightning:input aura:id="itemform" label="Price"
                                     formatter="currency"
                                     name="expenseclient"
                                     value="{!v.newItem.Price__c}"
                                     />
                    <lightning:input type="checkbox" aura:id="itemform" label="Packed"
                                     name="expreimbursed"
                                     checked="{!v.newItem.Packed__c}"
                                     onchange="{!c.createItem}"
                                     />
                    
                    <lightning:button label="Create Camping"
                                      class="slds-m-top--medium"
                                      variant="brand"
                                      onclick="{!c.clickCreateItem}"
                                      />
                    </form>
                    <!-- /CREATE NEW ITEM FORM -->
              
        </lightning:layoutItem>
    </lightning:layout>
    <!-- /NEW ITEM FORM -->
    
    <aura:iteration items="{!v.items}" var="item">
            <c:campingListItem item="{!item}"/>
    </aura:iteration>
</aura:component>